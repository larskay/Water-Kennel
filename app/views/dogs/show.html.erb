<h4><%= @dog.name %></h4>
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">&#215;</a>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  </div>
<% end %>
<table class="table table-striped">
  <tbody>
    <tr><th><i class="icon-th-list"></i>Nickname</th><td><%= @dog.nickname %></td>
      <th><i class="icon-th-list"></i>Dogs Name</th><td><%= @dog.name %></td></tr>
    <tr><th><i></i>Race:</th><td><%= @dog.race %></td>
      <th><i class="icon-heart"></i>Allergies:</th><td><%= @dog.allergies %></td></tr>
    <tr><th><i class="icon-user"></i>Regnr:</th><td><%= @dog.regnr %></td>
      <th><i class="icon-calendar"></i>Born:</th><td><%= @dog.born %></td></tr>
    <tr><th><i class="icon-tag"></i>ID Tagged:</th><td><%=  @dog.IDtagged %></td>
      <th><i class="icon-picture"></i>Photo:</td><td><%= link_to image_tag(@dog.photo, id: "dog_image"), @dog.photo.url %></td></tr>

  </tbody>
</table>
<div class="btn-group">
  <%= link_to "Delete", @dog, method: :delete, data: { confirm: "You sure?" }, class: "btn" %>
  <%= link_to "Edit", edit_dog_path(@dog), class: "btn" %>
  <%= link_to "New Treatment", new_dog_treatment_path(@dog), class: "btn" %>
</div>

<h4>Treatments</h4>
<table class ="table table-striped table-hover" id='dog_treatments'>
  <thead>
    <tr>
    <th>Date</th>
    <th>Full Treatment</th>
    <th>Bath</th>
    <th>Hair Dry</th>
    <th>Ears</th>
    <th>Teeth</th>
    <th>Claws</th>
    <th>Shaving</th>
    <th>Napping</th>
    <th>Bruch</th>
    <th>Form Cut</th>
    <th>Walk</th>
    <th>Minutes</th>
    <th>Price</th>
  </tr>
  </thead>
      <tbody>
        <% if @dog.treatments.any? %>
          <% @dog.treatments.each do |treatment| %>
            <tr><td><%= link_to treatment.date.to_date, treatment %></td>
            <td><%= treatment.full_treatment %></td>
            <td><%= treatment.bath %></td>
            <td><%= treatment.hair_dry %></td>
            <td><%= treatment.ears %></td>
            <td><%= treatment.teeth %></td>
            <td><%= treatment.claws %></td>
            <td><%= treatment.shaving %></td>
            <td><%= treatment.napping %></td>
            <td><%= treatment.brush %></td>
            <td><%= treatment.form_cut %></td>
            <td><%= treatment.walk %></td>
            <td><%= treatment.minutes %></td>
            <td><%= treatment.price %></td></tr>
          <% end %>
        <% end %>
  </tbody>
</table>