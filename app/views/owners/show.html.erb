<div class="adminheader"><%= @owner.name %></div>
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">&#215;</a>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  </div>
<% end %>
<table class="table table-striped">
  <tbody>
    <tr><th><i class="icon-th-list"></i>Name</th><td><%= @owner.name %></td>
      <th><i class="icon-th-list"></i>Address</th><td><%= @owner.address %></td></tr>
    <tr><th><i></i>Zip-Code</th><td><%= @owner.zip_code %></td>
      <th><i class="icon-heart"></i>Tlf</th><td><%= @owner.tlf %></td></tr>
    <tr><th><i class="icon-user"></i>Mobile</th><td><%= @owner.mobile %></td>
  </tbody>
</table>
<div class="btn-group">
  <%= link_to "Delete", @owner, method: :delete, data: { confirm: "You sure?" }, class: "btn" %>
  <%= link_to "Edit", edit_owner_path(@owner), class: "btn" %>
</div>

<h4>Dogs</h4>
<%= link_to "Add Dog", new_owner_dog_path(@owner), class: "btn btn-success" %>


<div class="table">
  <table class="table table-striped table-hover">
    <thead>
      <th>Dogs name</th>
      <th>Nickname</th>
      <th>Regnr</th>
      <th>Allergies</th>
      <th>Born</th>
      <th>Id tagged</th>
      <th>Race</th>
      <th>Photp</th>
    </thead>
    <tbody>
      <% if @owner.dogs.any? %>
      <% @owner.dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.nickname %></td>
        <td><%= dog.regnr %></td>
        <td><%= dog.allergies %></td>
        <td><%= dog.born.to_date %></td>
        <td><%= dog.IDtagged %></td>
        <td><%= dog.race %></td>
        <td><%= link_to image_tag(dog.photo, id: "dog_image"), dog.photo.url %></td>
      </tr>
      <% end %>
      <% end %>  
    </tbody>
  </table>
</div>